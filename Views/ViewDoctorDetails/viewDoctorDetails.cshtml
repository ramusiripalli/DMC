@{
    ViewBag.Title = "viewDoctorDetails";
}
<div>
    <button class="btn btn-primary" onclick="location.href='@Url.Action("PatientHome","PatientLogin")'">Back</button>
</div>
<h2><u> Available Doctors:</u></h2>
@using (Html.BeginForm())
{
    <table class="table" style="margin-top:80px;">
        <thead>
            <tr>
                <th>DoctorId</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Contact Number</th>             
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <td>@item.DoctorId</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Age</td>
                    <td>@item.Gender</td>
                    <td>@item.ContactNumber</td>
                </tr>
            </tbody>
        }

    </table>
}

@{
    ViewBag.Title = "PatientHome";
}

<h2>Welcome Patient</h2>
@using (Html.BeginForm())
{
    if (Session["UserId"] != null)
    {
        <h3>@ViewBag.ValidationMessage</h3>
        Session.Remove("UserId");
        Session.Remove("Password");
    }
}

<div class="btn-group btn-group-justified">
    <a href='@Url.Action("viewDoctorDetails", "viewDoctorDetails")' class="btn btn-primary">View Medicare Services</a>
    <a href='@Url.Action("viewDoctorDetails", "viewDoctorDetails")' class="btn btn-primary">View Doctor</a>
    <a href="#" class="btn btn-primary">View Agent</a>
</div>

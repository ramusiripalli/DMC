@{
    ViewBag.Title = "PatientDetails";
}
    <div>
        <button class="btn btn-primary btn-sm" onclick="location.href='@Url.Action("AdminHomePage","AdminLogin")'">Back</button>
    </div>
@using (Html.BeginForm())
{
    <table class="table" style="margin-top:80px;">
        <thead>
            <tr>
                <th>PatientId</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Contact Number</th>
                <th>Status</th>
                <th>Accept</th>
                <th>Reject</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <td>@item.PatientId</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Age</td>
                    <td>@item.Gender</td>
                    <td>@item.ContactNumber</td>
                    <td>@item.Status</td>
                    <td>@Html.ActionLink("Accept", "AcceptPatient", "PatientDetails", new { id = item.PatientId }, null)</td>
                    <td>@Html.ActionLink("Reject", "RejectPatient", "PatientDetails", new { id = item.PatientId }, null)</td>
                </tr>
            </tbody>
        }

    </table>
}
